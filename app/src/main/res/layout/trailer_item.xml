<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/video_container_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/release_date_margin_top"
    android:layout_marginRight="@dimen/release_date_margin_top"
    android:background="@drawable/trailer_review_background">


    <android.support.v7.widget.CardView
        android:id="@+id/trailer_image_container"
        android:layout_width="@dimen/trailer_video_width"
        android:layout_height="@dimen/trailer_video_height"
        android:layout_margin="@dimen/share_icon_margin_top"
        app:cardElevation="@dimen/card_elevation">

        <ImageView
            android:id="@+id/trailer_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2d000000">

            <TextView
                android:id="@+id/play_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/icomoon"
                android:text="@string/play_icon"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_size" />
        </FrameLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/share_icon_margin_top"
        android:layout_toRightOf="@id/trailer_image_container"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/black"
        tools:text="teaser 1" />
</RelativeLayout>