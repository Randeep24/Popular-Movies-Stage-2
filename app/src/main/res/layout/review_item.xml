<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/detail_layout_margin_bottom"
    android:background="@drawable/trailer_review_background"
    android:layout_marginBottom="@dimen/detail_layout_margin_bottom">

    <TextView
        android:id="@+id/author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/detail_layout_margin_bottom"
        android:textColor="@android:color/black"
        android:textSize="@dimen/no_review_size" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>